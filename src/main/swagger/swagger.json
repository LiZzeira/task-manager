      "get": {
        "summary": "Endpoint para buscar tarefas",
        "description": "Recupera uma lista de tarefas com base em filtros e opções de ordenação.",
        "tags": ["Tarefas"],
        "security": [
          {
            "BearerAuth": 
              {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header",
                "description": "Token de autenticação no formato 'Bearer [token]'"
              }
            
          }
        ],
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Termo de pesquisa para filtrar tarefas por nome ou descrição.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número da página a ser recuperada.",
            "schema": {
              "type": "integer",
              "format": "int32",
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Número máximo de tarefas a serem retornadas por página.",
            "schema": {
              "type": "integer",
              "format": "int32",
              "example": 10
            }
          },
          {
            "name": "orderBy",
            "in": "query",
            "description": "Campo pelo qual as tarefas devem ser ordenadas.",
            "schema": {
              "type": "string",
              "enum": ["name", "progress", "createdAt"],
              "example": "name"
            }
          },
          {
            "name": "desc",
            "in": "query",
            "description": "Ordenar em ordem decrescente (true) ou crescente (false).",
            "schema": {
              "type": "boolean",
              "example": false
            }
          },
          {
            "name": "filterColumns",
            "in": "query",
            "description": "Filtro por colunas",
            "schema": {
              "type": "object"
              
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tarefas recuperada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "ID da tarefa",
                            "example": "12345"
                          },
                          "name": {
                            "type": "string",
                            "description": "Nome da tarefa",
                            "example": "Tarefa 1"
                          },
                          "description": {
                            "type": "string",
                            "description": "Descrição da tarefa",
                            "example": "Esta é a descrição da tarefa 1"
                          },
                          "progress": {
                            "type": "number",
                            "description": "Progresso da tarefa (0-100)",
                            "example": 50
                          },
                          "isCompleted": {
                            "type": "boolean",
                            "description": "Indica se a tarefa está concluída",
                            "example": false
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Data de criação da conta."
                          },
                          "updatedAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Data da última atualização da conta."
                          },
                          "deletedAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Data em que a conta foi excluída (se aplicável)."
                          }
                        }
                      }
                    },
                    "page": {
                      "type": "int32",
                      "description": "Pagina atual",
                      "example": 0
                    },
